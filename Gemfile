source 'https://rubygems.org'

gem 'sinatra'  # Marco web DSL para Ruby, minimalista y flexible
gem 'sinatra-contrib'  # Para incluir sinatra/json y otros complementos
gem 'erb'  # Motor de plantillas integrado en Ruby para incrustar código Ruby en archivos de texto
gem 'tempfile'  # Biblioteca estándar de Ruby para la gestión segura de archivos temporales
gem 'open3'  # Librería estándar de Ruby para manejar tuberías y subprocesos de manera simple
gem 'pg'  # PostgreSQL adapter for Ruby, proporciona métodos para interactuar con bases de datos PostgreSQL
gem 'sequel'  # Kit de herramientas de base de datos para Ruby, proporciona una API de acceso a datos sencilla y flexible
gem 'rspec'  # Marco de pruebas para Ruby, utilizado para escribir especificaciones y pruebas
gem 'rack-test'  # Biblioteca para probar aplicaciones Rack, útil para realizar pruebas de integración y aceptación en aplicaciones Sinatra
gem 'dotenv'  # Carga variables de entorno desde archivos .env en aplicaciones Ruby, facilitando la gestión de configuraciones sensibles
gem 'bcrypt'  # Para hashing seguro de contraseñas en Ruby